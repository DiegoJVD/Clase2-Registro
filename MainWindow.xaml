<Window x:Class="Clase2_Registro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clase2_Registro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel> 
           <!-- ActoresID -->
        <StackPanel Orientation="Horizontal">
            <Label Content="ActorID"/>
            <TextBox x:Name="ActorIDTextBox" Width="100" Text="{Binding ActorID}"/>
            <Button x:Name="BuscarButton" Content="Buscar" Click="BuscarButton_Click"/>
        </StackPanel>

            <!--Nombres-->
            <Label Content="Nombres"/>
            <TextBox x:Name = "NombresTextbox" Text = "{Binding Nombres}"/>

            <!--Salario-->
            <Label Content="SalarioId"/>
            <TextBox x:Name = "SalarioTextbox" Text = "{Binding SalarioId}"/>

            <Button x:Name = "GuardarButton" Content= "Guardar" Click = "GuardarButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
